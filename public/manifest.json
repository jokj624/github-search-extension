{
  "short_name": "Github-Search",
  "name": "Github Finder",
  "description": "Search on GitHub quickly and easily!",
  "manifest_version": 3,
  "version": "1.0.0",
  "background": {
    "sevice_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://api.github.com/"
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Enter the word you want to search for on Github"
  }
}